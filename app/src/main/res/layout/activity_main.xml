<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/logo" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/jianbian" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/top_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardCornerRadius="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="每日健康打卡"
                                android:layout_margin="25dp"
                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                />
                            <View
                                android:layout_width="60dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="25dp"
                                android:background="#68DEAE"
                                android:layout_alignParentBottom="true"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/input_introduction_textview"
                                android:layout_width="96dp"
                                android:layout_height="32dp"
                                app:cardBackgroundColor="#68DEAE"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="填报说明"
                                    android:textColor="@color/colorWhite"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_toStartOf="@+id/deadline_textView"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="截止时间："
                                android:layout_centerVertical="true"
                                />
                            <TextView
                                android:id="@+id/deadline_textView"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="2020-06-13"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                />
                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="学号*"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    />
                                <TextView
                                    android:id="@+id/id_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    tools:text="2017213072"
                                    android:textSize="18sp"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="#00000000"
                                    android:textColor="#CA0f1f0f"
                                    android:gravity="center_vertical"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/lineView"
                                    android:layout_alignParentBottom="true"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="姓名*"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    />
                                <TextView
                                    android:id="@+id/name_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    tools:text="刘连波"
                                    android:textSize="18sp"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="@color/colorNull"
                                    android:textColor="#CA0f1f0f"
                                    android:gravity="center_vertical"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/lineView"
                                    android:layout_alignParentBottom="true"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/phoneNum_container"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="电话*"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    />
                                <EditText
                                    android:id="@+id/phoneNum_Edittext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    tools:text="17337708067"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="@color/colorNull"
                                    android:textColor="#CA0f1f0f"
                                    android:gravity="center_vertical|end"
                                    android:textSize="18sp"
                                    android:paddingTop="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingBottom="0dp"
                                    android:paddingStart="0dp"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/lineView"
                                    android:layout_alignParentBottom="true"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="自己或亲友为确诊病例*"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    />
                                <TextView
                                    android:id="@+id/patient_select_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="请选择"
                                    android:drawableEnd="@mipmap/next"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="@color/colorNull"
                                    android:textColor="#CA0f1f0f"
                                    android:gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:paddingTop="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingBottom="0dp"
                                    android:paddingStart="0dp"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/lineView"
                                    android:layout_alignParentBottom="true"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="体温*"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    />

                                <EditText
                                    android:id="@+id/temperature_Edittext"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="@color/colorNull"
                                    android:gravity="center_vertical|end"
                                    android:paddingStart="0dp"
                                    android:paddingTop="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingBottom="0dp"
                                    android:textColor="#CA0f1f0f"
                                    android:textSize="18sp"
                                    tools:text="36.5"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/lineView"
                                    android:layout_alignParentBottom="true"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/detail_location_container"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="打卡地点*"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    />
                                <EditText
                                    android:id="@+id/detail_location_Edittext"
                                    android:layout_height="match_parent"
                                    android:layout_width="180dp"
                                    android:singleLine="true"
                                    tools:text="重庆市南岸区重庆邮电大学"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="@color/colorNull"
                                    android:textColor="#CA0f1f0f"
                                    android:gravity="center_vertical|end"
                                    android:textSize="18sp"
                                    android:paddingTop="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingBottom="0dp"
                                    android:paddingStart="0dp"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/lineView"
                                    android:layout_alignParentBottom="true"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/extras_container"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="备注"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    />
                                <EditText
                                    android:id="@+id/extras_edittext"
                                    android:layout_height="match_parent"
                                    android:layout_width="180dp"
                                    android:singleLine="true"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="@color/colorNull"
                                    android:textColor="#CA0f1f0f"
                                    android:gravity="center_vertical|end"
                                    android:textSize="18sp"
                                    android:hint="填写其他需要说明的情况"
                                    android:paddingTop="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingBottom="0dp"
                                    android:paddingStart="0dp"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/colorGray"
                                    android:layout_alignParentBottom="true"
                                    />
                            </RelativeLayout>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/report_container_cardView"
                            android:layout_marginTop="32dp"
                            android:layout_width="128dp"
                            android:layout_height="32dp"
                            app:cardBackgroundColor="#68DEAE"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center_horizontal"
                            >
                            <TextView
                                android:id="@+id/report_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="打卡"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/history_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="历史填报"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/colorBlack"
                            />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/warning_cardview"
                            android:layout_marginTop="16dp"
                            android:layout_width="128dp"
                            android:layout_height="32dp"
                            app:cardBackgroundColor="#FF3030"
                            app:cardCornerRadius="8dp"
                            android:layout_marginBottom="16dp"
                            android:layout_gravity="center_horizontal"
                            >
                            <TextView
                                android:id="@+id/warning_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="报警信息"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="16sp"
                                />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>